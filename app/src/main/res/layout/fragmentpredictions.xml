<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495E"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#34495E"

        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a new Prediction!"
        android:textColor="#FF5722"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/testText"
        />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/predictSpinner"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_blue_light"
        android:textAlignment="center"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        >


    </Spinner>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/eurosign"
        android:layout_gravity="center_horizontal"
        android:id="@+id/materialSign"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Value = 3.50"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/currentValue"
            android:layout_marginTop="20dp"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="Leave a comment about your prediction"
            android:id="@+id/commentText"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/predictionLayout"
        >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/upbutton"
            android:scaleType="fitCenter"
            android:background="#34495E"
            android:id="@+id/riseButton"
            />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/minusbutton"
            android:scaleType="fitCenter"
            android:background="#34495E"
            android:id="@+id/stableButton"

            />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/downbutton"
            android:scaleType="fitCenter"
            android:background="#34495E"
            android:id="@+id/fallButton"

            />



    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/predictionText"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />

     <LinearLayout
         android:id="@+id/buttonLayouts"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center_horizontal"
         android:padding="10dp"
         android:layout_marginTop="30dp"
         >

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Submit"
             android:id="@+id/submitPrediction"
             />
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Update"
             android:id="@+id/updatePrediction"
             />


     </LinearLayout>

</LinearLayout>
    </ScrollView>
    </LinearLayout>